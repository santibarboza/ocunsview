{% extends 'layout.twig' %}

{% block body %}
        {% include "components/navegationBar.twig" %}
        <div class="container-fluid" id="panelIde">
            <div class="col-xs-6 col-md-4">
                <div class="panel panel-default" id="panelCode">
                  <div class="panel-heading">
                    <h3 class="panel-title">Codigo</h3>
                  </div>
                  <div class="panel-body">
                    <form role="form">
                        <textarea id="sourceCode"
                                  class="form-control source-code"
                                  style="margin-bottom:5px;"
                                  rows="20"
                                  tab-support
                                  select-line
                                  ng-model="code">//aca iria el codigo fuente</textarea>
                        <div id="barraCompilar">
                            <h5 class="col-md-7">Direccion de Inicio:</h5>
                            <textarea class="col-md-2" rows="1" cols="2" maxlength="2"></textarea>
                            <button type="button" class="btn btn-default col-md-3" id="compilar">Compilar</button>
                        </div> 
                    </form>
                  </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-4">
                <div class="panel panel-default" id="panelCompilado">
                  <div class="panel-heading">
                    <h3 class="panel-title">Codigo Compilado</h3>
                  </div>
                  <div class="panel-body">
                    <form role="form">
                        <h3 id="codigoCompilado">//Aca iria el codigo compilado</h3>
                        <div id="barraCompilar">
                            <h5 class="col-md-6">Direccion de Inicio:</h5>
                            <textarea class="col-md-2" rows="1" cols="2" maxlength="2"></textarea>
                            <button type="button" class="btn btn-default col-md-4" id="compilar">Compilar</button>
                        </div>    
                    </form>
                  </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-4"></div>
        </div>
        {% include "components/footer.twig" %}

{% endblock %}
